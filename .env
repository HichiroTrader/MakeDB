# RithmicDataCollector Environment Configuration
# Copy this file to .env and fill in your actual values

# Database Configuration
DB_HOST=db
DB_PORT=5432
DB_NAME=rithmic_db
DB_USER=postgres
DB_PASSWORD=securepassword

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379

# Rithmic API Credentials
# Get these from your Rithmic account
RITHMIC_USER=Iloveusa888@rommiui.com
RITHMIC_PASSWORD=12345678$$
RITHMIC_SYSTEM_NAME=Rithmic Paper Trading
RITHMIC_APP_NAME=RithmicDataCollector
RITHMIC_APP_VERSION=1.0.0

# R|Trader Pro Plugin Mode Configuration
USE_RTRADER_PRO=true
RTRADER_HOST=127.0.0.1
RTRADER_PORT=3011

# Symbol Configuration
# Comma-separated list of symbols to collect data for
SYMBOLS=GCQ5,MGCQ5,GCZ5,MGCZ5

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True

# Logging Configuration
LOG_LEVEL=INFO

# Security Settings
# Change these in production
SECRET_KEY=dev-secret-key-change-in-production
JWT_SECRET_KEY=dev-jwt-secret-change-in-production

# Optional: Custom Configuration
COLLECTOR_BATCH_SIZE=100
COLLECTOR_BATCH_TIMEOUT=5
API_MAX_LIMIT=1000
LEVEL2_DEPTH=10

# Monitoring and Alerting
ENABLE_METRICS=true

# Docker Configuration
COMPOSE_PROJECT_NAME=rithmic-data-collector
COMPOSE_FILE=docker-compose.yml