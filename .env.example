# RithmicDataCollector Environment Configuration
# Copy this file to .env and fill in your actual values

# Database Configuration
DB_HOST=db
DB_PORT=5432
DB_NAME=rithmic_db
DB_USER=postgres
DB_PASSWORD=securepassword

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379

# Rithmic API Credentials
# Get these from your Rithmic account
RITHMIC_USER=your_username
RITHMIC_PASSWORD=your_password
RITHMIC_SYSTEM_NAME=Rithmic Paper Trading
RITHMIC_APP_NAME=RithmicDataCollector
RITHMIC_APP_VERSION=1.0.0
RITHMIC_URL=wss://rituz00100.rithmic.com:443

# Symbol Configuration
# Comma-separated list of symbols to collect data for
SYMBOLS=ESZ23,CLZ23,NQZ23,YMZ23,RTY23

# Flask Configuration
FLASK_ENV=production
FLASK_DEBUG=False

# Logging Configuration
LOG_LEVEL=INFO

# Optional: SSL Configuration for NGINX
# SSL_CERT_PATH=/path/to/cert.pem
# SSL_KEY_PATH=/path/to/key.pem

# Optional: Custom Configuration
# COLLECTOR_BATCH_SIZE=100
# COLLECTOR_BATCH_TIMEOUT=5
# API_MAX_LIMIT=1000
# LEVEL2_DEPTH=10

# Security Settings
# Change these in production
SECRET_KEY=your-secret-key-here
JWT_SECRET_KEY=your-jwt-secret-here

# Monitoring and Alerting
# ENABLE_METRICS=true
# ALERT_WEBHOOK_URL=https://your-webhook-url.com
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# AWS Configuration (for deployment)
# AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key

# Docker Configuration
# COMPOSE_PROJECT_NAME=rithmic-data-collector
# COMPOSE_FILE=docker-compose.yml